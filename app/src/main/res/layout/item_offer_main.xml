<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemBtn"
    android:layout_width="150dp"
    android:layout_height="230dp"
    android:layout_marginTop="@dimen/dimen_normal_5"
    android:layout_marginEnd="@dimen/dimen_normal_5"
    android:layout_marginStart="@dimen/dimen_normal_5"
    android:background="@drawable/edittext_design">

    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/offerImageIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/elezaby_offer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="#EDFFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:gravity="center"
            android:id="@+id/companyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_normal_5"
            android:textColor="#000"
            android:textSize="@dimen/dimen_text_18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/offerTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_normal_10"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="@dimen/dimen_text_16" />
    </LinearLayout>

</FrameLayout>